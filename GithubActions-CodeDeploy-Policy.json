{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3BucketAndObjects",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject","s3:GetObject","s3:DeleteObject","s3:AbortMultipartUpload",
        "s3:ListBucket","s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::newregion-jr",
        "arn:aws:s3:::newregion-jr/*"
      ]
    },
    {
      "Sid": "RegisterRevisionOnApplication",
      "Effect": "Allow",
      "Action": ["codedeploy:RegisterApplicationRevision","codedeploy:GetApplication","codedeploy:GetApplicationRevision"],
      "Resource": "arn:aws:codedeploy:us-west-2:822654907350:application:CodeDeployDemoApp"
    },
    {
      "Sid": "CreateDeploymentOnDG",
      "Effect": "Allow",
      "Action": ["codedeploy:CreateDeployment","codedeploy:GetDeploymentGroup"],
      "Resource": "arn:aws:codedeploy:us-west-2:822654907350:deploymentgroup:CodeDeployDemoApp/CodeDeployDemoDG"
    },
    {
      "Sid": "ReadDeploymentStatus",
      "Effect": "Allow",
      "Action": [
        "codedeploy:GetDeployment",
        "codedeploy:ListDeployments",
        "codedeploy:BatchGet*",
        "codedeploy:GetDeploymentConfig"
      ],
      "Resource": "*"
    }
  ]
}
